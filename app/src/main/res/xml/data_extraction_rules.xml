<data-extraction-rules>
    <cloud-backup>
        <!-- ❌ NUNCA permitir respaldo en la nube -->
        <exclude domain="database" path="."/>
        <exclude domain="sharedpref" path="."/>
    </cloud-backup>

    <device-transfer>
        <!-- ❌ NUNCA permitir transferencia a otro dispositivo -->
