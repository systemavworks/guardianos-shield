<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuración base: solo tráfico cifrado, sin cleartext -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <!-- Opcional: quitar user si no usas certificados personalizados -->
            <!-- <certificates src="user" /> -->
        </trust-anchors>
    </base-config>

    <!-- Dominios específicos que usamos -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">safebrowsing.googleapis.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>

    <!-- Solo si usas actualizaciones remotas desde GitHub en el futuro -->
    <!--
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">raw.githubusercontent.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    -->

</network-security-config>
